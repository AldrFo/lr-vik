<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/teal_200"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <EditText
        android:id="@+id/personEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/refreshPerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Обновить участника" />

    <Button
        android:id="@+id/newPerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Новый участник" />

    <Button
        android:id="@+id/play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Розыгрыш" />

    <Button
        android:id="@+id/deletePlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Удалить участника" />
</LinearLayout>